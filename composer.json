{
    "name": "noiselabs/smarty-bundle",
    "type": "symfony-bundle",
    "description": "This Symfony2 bundle provides integration for the Smarty3 template engine.",
    "keywords": ["templating", "smarty", "symfony", "noiselabs"],
    "homepage": "http://smartybundle.noiselabs.org",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Vítor Brandão",
            "email": "noisebleed@noiselabs.org",
            "homepage": "http://blog.noiselabs.org"
        }
    ],
    "support": {
        "irc": "irc://irc.freenode.org/noiselabs",
        "issues": "https://github.com/noiselabs/SmartyBundle/issues"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": ">=2.0",
        "smarty/smarty": ">=v3.1.11"
    },
    "require-dev": {
        "symfony/assetic-bundle": ">=2.0",
        "mopa/bootstrap-bundle": "dev-master"
    },
    "suggest": {
        "symfony/assetic-bundle": "Integrates Assetic into Symfony2"
    },
    "autoload": {
        "psr-0": { "NoiseLabs\\Bundle\\SmartyBundle": "" }
    },
    "target-dir": "NoiseLabs/Bundle/SmartyBundle",
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
